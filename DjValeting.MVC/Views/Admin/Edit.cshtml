@model DjValeting.MVC.Models.ClientModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="BookingDate" class="control-label">Booking Date</label>
                <input type="date" asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Flexibility" class="control-label"></label>
                <select asp-for="Flexibility" class="form-select">
                <option value="1">+/- 1 Day</option>
                <option value="2">+/- 2 Days</option>
                <option value="3">+/- 3 Days</option>
            </select>
                <span asp-validation-for="Flexibility" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="VehicleSize" class="control-label">Vehicle Size</label>
                <select asp-for="VehicleSize" class="form-select">
                    <option value="1">Small</option>
                    <option value="2">Medium</option>
                    <option value="3">Large</option>
                    <option value="4">Van</option>
                </select>
            </div>
            <div class="form-group my-2">
                <label asp-for="ContactNumber" class="control-label">Contact Number</label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <input asp-for="Approved" type="hidden" class="form-control" />
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
